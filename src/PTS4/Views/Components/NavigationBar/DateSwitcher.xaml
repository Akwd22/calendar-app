<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PTS4.Views.Components.NavigationBar.DateSwitcher">
  <ContentView.Content>
        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
            <ImageButton Source="left_arrow_normal.png" Clicked="OnLeftButtonClicked" />
            <Label Text="{Binding CurrentDate}" TextColor="White"/>
            <ImageButton Source="right_arrow_normal.png" Clicked="OnRightButtonClicked" />
        </StackLayout>
    </ContentView.Content>
</ContentView>